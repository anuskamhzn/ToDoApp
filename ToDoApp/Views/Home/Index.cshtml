@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <h1 class="display-4 fw-bold mb-3">To Do App</h1>

            <p class="lead text-muted mb-4">
                A simple, clean way to organize your tasks and get stuff done.
            </p>

            <div class="my-5">
                <h4>What you can do:</h4>
                <ul class="list-unstyled fs-5">
                    <li class="mb-2">✓ Add new tasks quickly</li>
                    <li class="mb-2">✓ Mark tasks as completed</li>
                    <li class="mb-2">✓ Edit or delete items anytime</li>
                    <li>✓ See your progress at a glance</li>
                </ul>
            </div>

            <div class="d-grid gap-3 d-sm-flex justify-content-sm-center">
                <a href="/Tasks" class="btn btn-primary btn-lg px-5">
                    Go to My Tasks →
                </a>
                <a href="/Home/Privacy" class="btn btn-outline-secondary btn-lg px-5">
                    Learn more
                </a>
            </div>

            <p class="mt-5 text-muted small">
                Built with ASP.NET Core • Simple • Fast • No nonsense
            </p>
        </div>
    </div>
</div>
